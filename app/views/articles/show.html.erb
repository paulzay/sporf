<div class= 'article'>
	<h1 class="title"><%= @article.title%></h1>
  <p><%= @article.author.name %></p>
	<div class= 'img-article'>
	  <%= image_tag @article.header_image, class: 'style_image'%>
	</div>

	<p class="container"><%= @article.text%></p>
	<div class="likes">
		<p><%= @article.votes.count %> <%= (@article.votes.count) == 1 ? 'Like' : 'Likes'%></p>
		<% if logged_in? %>
			<%= like_dislike_btn %>
		<% end %>
	</div>
	<div>
		<p>
		  Tags:
		  <% @article.tags.each do |tag| %>
		    <%= link_to tag.name, tag_path(tag) %>
		  <% end %>
		</p>
	</div>
	<div class="nav-links">
		<span><%= edit_btn(current_user)%><span>
		<span><%= destroy_btn(current_user)%></span>
	</div>

</div>
 