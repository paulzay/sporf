<p id="notice"><%= notice %></p>

<div class= 'article'>
	<h1 class="title"><%= @article.title%></h1>
	<div class= 'img-article'>
	  <%= image_tag @article.header_image, class: 'style_image'%>
	</div>

	<p class="container"><%= @article.text%></p>
	<div>
		<%= link_to like_article_path(@article), method: :put do %>
			Like
	<%= @article.get_upvotes.size %>
	<% end %>
	<%= link_to unlike_article_path(@article), method: :put do %>
			Dislike
	<%= @article.get_downvotes.size %>
	<% end %>
			
	</div>
	<div class="nav-links">
		<span><%= link_to 'Edit', edit_article_path(@article) %></span> |
	</div>

</div>
