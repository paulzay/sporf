<div class="articles">
  <% @articles.each do |article| %>
    <div class= 'article'>
        <div id="reverse" class= 'reverse'>
          
        </div>
        <div class="words">
          <h2><%= article.category.name %></h2>
          <h5 class="card-text font-weight bold"><%= article.title %></h5>
          <p class="card-text"><%= truncate(article.text, length: 50) %></p>
        
          <p>
          <%= link_to 'Read more', article_path(article), id: 'readmore' %>
          </p>
        </div>
    </div>
  <% end %>
</div>
