<div class="row login">
  <div class="col-md-4 offset-4">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name,id: 'form-name', class: 'mb-1 form-control' %>

      <button class= "btn btn-primary"><%= f.submit "Create my account",class: " mt-2 btn btn-primary" %></button>
    <% end %>
  </div>
</div>
